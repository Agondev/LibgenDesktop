<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:LibgenDesktop.Views.Controls">
    <Style x:Key="LanguagePanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical" />
    </Style>
    <Style x:Key="ChooseLanguage" TargetType="TextBlock">
        <Setter Property="Margin" Value="12,0,12,12" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    <Style x:Key="LanguageComboBox" TargetType="c:LanguageComboBox" BasedOn="{StaticResource NonEditableComboBox}">
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="PercentTranslatedFontSize" Value="14" />
    </Style>
</ResourceDictionary>